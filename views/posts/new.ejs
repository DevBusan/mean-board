<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<% include ../partials/head %>
	<script src="https://cdn.ckeditor.com/4.6.2/standard/ckeditor.js"></script>
</head>
<body>
	<% include ../partials/nav %>

	<div class="posts posts-new container">
		<% include ./partials/title %>
		<div class="page-header">
			<h3>New Post</h3>
		</div>
		<form action="/posts" method="post" class="form-horizontal" enctype="multipart/form-data">
			<div class="form-group">
				<label class="col-sm-2" for="title">Title</label>
				<div class="col-sm-10">
				<input class="form-control" type="text" name="title" id="title" placeholder="Title" required>
				</div>
			</div>			
			<div class="form-group">
				<label class="col-sm-2" for="body">Body</label>
				<div class="col-sm-10">
				<textarea class="form-control body" rows="6" name="body" id="body" placeholder="Contents"></textarea>
				<script>
						CKEDITOR.replace('body');
				</script>
				</div>
			</div>
			<div>
				<label class="col-sm-2" for="attach">Attachment</label>
				<div class="col-sm-10">
						<input class="form-control" type="file" name="attach" id="attach" placeholder="Attach files" multiple>
				</div>
			</div>

			<a href="/posts" class="btn btn-default">Back</a>
			<div class="pull-right">
				<button class="btn btn-default" type="submit">Create</button>
			</div>
		</form>
	</div>
</body>
</html>
